<div class="container">
<h1>Listing projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_project_path, html_options = {class: "btn"} do %>
  <i class="fa fa-plus">New Project</i>
<% end %>

<%= link_to indicators_path, html_options = {class: "btn"} do %>
  <i class="fa fa-reorder">Manage Indicators</i>
<% end %>

</div>
