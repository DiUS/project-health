<div class="dashboard">
  <h1><%= @project.name %></h1>

  <div class="indicators">
    <% @indicator_measures.each do | measure | %>
      <div class='indicator <%= measure.health %>'>
        <span class="title"><%= measure.name %></span>
        <span class="mean">
          <%= '%.2f' % measure.mean if measure.mean %> 
          <i class="fa <%= measure.delta %>"></i>
        </span>
      </div>
    <% end %>
  </div>

</div>

