
<div class="container">
<h2>Project Dashboard</h2>
<h3>Project Details</h3>

<div class="row span12">
  <strong>Name:</strong>   <%= @project.name %>
</div>

<%= link_to 'Edit', edit_project_path(@project) %> 

<h3>Spans</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>From</th>
      <th>To</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @spans.each do |span| %>
      <tr>
        <td><%= span.name %></td>
        <td><%= span.determine_start_of_span %></td>
        <td><%= span.created_at.strftime('%e-%m-%y %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h4>Acivate Next Span</h4>

  <%= form_for([@project,@span], :html => { class: "form-inline" }) do |f| %>
      <div class="row">
        <div class="span4">
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.submit "Activate", class: "btn btn-large btn-primary" %>
        </div>
      </div>

  <% end %>


<%= link_to 'Back', projects_path %>
</div>


