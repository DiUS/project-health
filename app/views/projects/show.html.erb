
<div class="container">
<h2>Project Dashboard</h2>
<h3>Project Details</h3>

<div class="row span12">
  <strong>Name:</strong>   <%= @project.name %>
</div>

<%= link_to 'Edit', edit_project_path(@project) %> 

<div class="well">
<h3>Spans</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>From</th>
      <th>To</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @spans.each do |span| %>
      <tr>
        <td><%= span.name %></td>
        <td><%= span.determine_start_of_span %></td>
        <td><%= span.created_at.strftime('%e-%m-%y %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>



      <div class="row offset2">
  <%= form_for([@project,@span], :html => { class: "form-inline" }) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.submit "Activate", class: "btn btn-large btn-primary" %>


  <% end %>
        </div>
<div>

<%= link_to 'Back', projects_path %>
</div>


