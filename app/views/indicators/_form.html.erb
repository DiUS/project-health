<%= form_for(@indicator,html: {class: "form-horizontal"}) do |f| %>
  <% if @indicator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@indicator.errors.count, "error") %> prohibited this indicator from being saved:</h2>

      <ul>
      <% @indicator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :one_label %>
    <%= f.text_field :one_label %>
  </div>
  <div class="field">
    <%= f.label :five_label %>
    <%= f.text_field :five_label %>
  </div>

  <div class="field">	
    <%= f.label :category_id, "Category" %>
    <%= select(:indicator, "category_id", Category.all.collect {|cat| [ cat.name, cat.id ] }, {include_blank: ''})%>
  </div>

  <div class="field">
    <%= f.label :sort_order %>
    <%= f.number_field :sort_order %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
