<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td class="actions">
        	<%= link_to 'Show', category, class:"detail" %>
        	<%= link_to 'Edit', edit_category_path(category), class:"edit" %>
        	<%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"destroy" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path, html_options = {class: "new"} %>
