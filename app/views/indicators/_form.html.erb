<%= form_for(@indicator,html: {class: "form-horizontal"}) do |f| %>
  <%= render(:partial => "shared/error_pane", :locals => {object: @indicator})%>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :one_label %>
    <%= f.text_field :one_label %>
  </div>
  <div class="field">
    <%= f.label :five_label %>
    <%= f.text_field :five_label %>
  </div>

  <div class="field">	
    <%= f.label :category_id, "Category" %>
    <%= select(:indicator, "category_id", Category.all.collect {|cat| [ cat.name, cat.id ] }, {include_blank: ''})%>
  </div>

  <div class="field">
    <%= f.label :sort_order %>
    <%= f.number_field :sort_order %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
