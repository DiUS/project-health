<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td class="actions">
        	<%= link_to 'Dashboard', project_dashboard_index_path(project), class: "dashboard" %>
        	<%= link_to 'Show', project, class:"detail" %>
        	<%= link_to 'Edit', edit_project_path(project), class:"edit" %>
        	<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class:"destroy" %>
    	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Project", new_project_path, html_options = {class: "new"} %>
